{# \templates\macro\macroMenu.html.twig #}

{% macro menu(nomBanque, menuActif) %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">{{ nomBanque }}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item
       {% if menuActif == 1 %}
           active
       {% endif %}">
                    <a class="nav-link" href="/">Accueil</a>
                </li>


                <li class="nav-item
     {% if menuActif == 2 %}
           active
       {% endif %}">
                    <a class="nav-link" href="/offres">Nos offres</a>
                </li>

                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item
     {% if menuActif == 3 %}
           active
       {% endif %}">
                    <a class="nav-link" href="/clients">Nos clients</a>
                </li>
                <li class="nav-item
     {% if menuActif == 4 %}
           active
       {% endif %}">
                    <a class="nav-link" href="/mouvements">Les mouvements</a>
                </li>
                    <li class="nav-item
     {% if menuActif == 6 %}
           active
       {% endif %}">
                    <a class="nav-link" href="/register">Créer utilisateur</a>
                </li>
                {% endif %}
                <li class="nav-item
     {% if menuActif == 5 %}
           active
       {% endif %}">
                    <a class="nav-link" href="/avis">Avis</a>
                </li>

                {% if app.user %}
                    <li class="nav-item
                    {% if menuActif == 8 %}
                    active
                    {% endif %}">
                        <a class="nav-link" href="{{ path('app_logout') }}">
                            {{ app.user.username }} Se déconnecter</a>
                    </li>
                {% else %}
                    <li class="nav-item
                    {% if menuActif == 7 %}
                    active
                    {% endif %}">
                        <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                    </li>
                {% endif %}


            </ul>

        </div>
    </nav>
{% endmacro %}
